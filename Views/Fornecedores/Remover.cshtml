@model DsiVendas.Models.Fornecedor

<h1>Confirmar Exclusão</h1>

<p>Você tem certeza que deseja remover o fornecedor @Model.Nome?</p>

<div>
    <h4>Detalhes do Fornecedor</h4>
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>
        <dt class="col-sm-2">Cidade</dt>
        <dd class="col-sm-10">@Model.Cidade</dd>
        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Telefone</dd>
    </dl>
</div>

<form asp-action="Excluir" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="submit" value="Excluir" class="btn btn-danger" />
    @Html.AntiForgeryToken()
</form>
<a asp-action="Index" class="btn btn-secondary">Cancelar</a>
