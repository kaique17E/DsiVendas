@model IEnumerable<DsiVendas.Models.Cliente>

<h1>Lista de Clientes</h1>

<p>
  <a asp-action="Criar">Criar Novo Cliente</a>
</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nome</th>
      <th scope="col">Email</th>
      <th scope="col">Endereço</th>
      <th scope="col">Telefone</th>
      <th scope="col">Bairro</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var cliente in Model)
    {
      <tr>
        <td scope="row">@cliente.Id</td>
        <td>@cliente.Nome</td>
        <td>@cliente.Email</td>
        <td>@cliente.Endereco</td>
        <td>@cliente.Telefone</td>
        <td>@cliente.Bairro</td>
        <td>
          <a asp-action="Editar" asp-route-id="@cliente.Id">Editar</a> |
          <a asp-action="Detalhes" asp-route-id="@cliente.Id">Detalhes</a> |
          <form asp-action="Excluir" asp-route-id="@cliente.Id" method="post" style="display:inline;">
            <button type="submit" onclick="return confirm('Tem certeza que deseja excluir?');">Excluir</button>
          </form>
        </td>
      </tr>
    }
  </tbody>
</table>
